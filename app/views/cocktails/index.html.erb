<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/109275/pexels-photo-109275.jpeg?w=940&h=650&auto=compress&cs=tinysrgb');">
  <div class="banner-content">
    <h1>Mr Cockail</h1>
    <p>The collaborative cocktail book.</p>
   <%= link_to 'New cocktail', new_cocktail_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>


<div class="box">
<div class="content">

<h2>Our cocktails</h2>
<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.present? %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>'); ">
          <h4><%= cocktail.name %></h4>
          <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div></div>
</div>
