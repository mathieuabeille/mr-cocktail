<h2><%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose| %>
  <div>
    <p><%= dose.description %> of <%= dose.ingredient.name %></p>
    <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<h3>Create new dose</h3>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<%= simple_form_for([@cocktail, @dose]) do |f| %>

